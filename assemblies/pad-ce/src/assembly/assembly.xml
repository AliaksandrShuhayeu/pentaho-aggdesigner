<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>pad-ce</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources-filtered</directory>
      <outputDirectory>aggregation-designer</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources-filtered</directory>
      <outputDirectory>aggregation-designer</outputDirectory>
      <filtered>true</filtered>
      <excludes>
        <exclude>**/*.sh</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>aggregation-designer</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${assembly.dir}/oss-licenses</directory>
      <outputDirectory>aggregation-designer/doc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${assembly.dir}/lib</directory>
      <outputDirectory>aggregation-designer/lib</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
